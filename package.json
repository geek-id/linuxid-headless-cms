{
  "name": "linuxid-static-site",
  "version": "1.0.0",
  "description": "A pure static site generator built with Next.js that reads content from markdown files - zero APIs, zero database, pure static",
  "scripts": {
    "dev": "next dev",
    "dev:admin": "next dev -c next.config.dev.js",
    "build": "next build",
    "build:static": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules/.cache",
    "reset": "rm -rf node_modules package-lock.json && npm install",
    "publish:scheduled": "node scripts/publish-scheduler.js",
    "publish:check": "node scripts/publish-scheduler.js --dry-run --verbose",
    "schedule:cron": "node scripts/publish-scheduler.js && npm run build"
  },
  "keywords": [
    "static-site-generator",
    "pure-static",
    "markdown",
    "nextjs",
    "seo",
    "typescript",
    "blog",
    "file-based",
    "no-database",
    "zero-api"
  ],
  "author": {
    "name": "LinuxID",
    "email": "hello@agemcloud.com",
    "url": "https://linux-id.net"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/geek-id/linuxid-static-site.git"
  },
  "bugs": {
    "url": "https://github.com/geek-id/linuxid-static-site/issues"
  },
  "homepage": "https://github.com/geek-id/linuxid-static-site#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.294.0",
    "marked": "^9.1.6",
    "next": "14.0.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  }
}
